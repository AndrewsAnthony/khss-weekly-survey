extends ../layout

block style
  include ../style/work
block scripts
  include ../script/work

include ../mixins/header
include ../mixins/history

include ./changelist

include ../mixins/createnote
include ../mixins/createfile
include ../mixins/display-house-district-sector

block content
  #loading_layer
    .loader

  +header(user, true, true, true)

  .container(role="main")
    .row
      .col-sm-12.well#tabSchedule
        if (viewHelper.checkUserRule('showWork', user.Rules))
          .well.well-sm
            h4.text-center
              b
                i.text-uppercase
                  | #{schedule.title}
                  br
                  | #{moment(schedule.year).format('YYYY')}

          if (viewHelper.checkUserRule('changeWork', user.Rules))
            button(type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#changeList") Добавить / Изменить список домов

          form(role="form")#searchSchedule
            .input-group
              input.search(type="text" class="form-control" placeholder="Поиск в списке")
              .input-group-btn
                button.btn.btn-primary(type="button")
                  i.fa.fa-times
          hr

          +display-house-district-sector(schedule.Houses, 'schedule', schedule.id)

          if (viewHelper.checkUserRule('changeWork', user.Rules))
            +changelist(schedule)