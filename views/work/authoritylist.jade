include ../mixins/modeldetailbutton
include ../mixins/tooltipborder

mixin authoritylist(authority, rules)
  +tooltipborder("Статус - " + viewHelper.tooltipTitle(authority.status))
  li.list-group-item(id= viewHelper.addBorderStyle(authority.status))
    .dropdown.pull-right
      +modeldetailbutton(authority, 'authority', rules)
    span.searchtext
      | #{authority.name}
      br
      | #{moment(authority.date).format('DD-MM-YYYY')}
      br
      | #{authority.location}